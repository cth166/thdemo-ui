{
  "compilerOptions": {
    "target": "es2018",
    "baseUrl": ".",
    "rootDir": ".",
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "@ivmp-ui/*": ["packages/*"],
      "ivmp-ui": ["packages/ivmp-ui"]
    },
    "resolveJsonModule": true,
    "types": [],
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "removeComments": false,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "preserveSymlinks": true
  }
}
